@model IEnumerable<UniversityManager.Models.GroupViewModel>

@{
    ViewBag.Title = "GetAllGroups";
}

<h2>GetAllGroups</h2>

<p>
    @Html.ActionLink("Create New", "AddGroup")
</p>
<p>
    @Html.ActionLink("Send Request", "SendRequest")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("SendRequest", "SendRequest", new { groupName=item.Name }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
